<li>
  <span class="content"><%= videopost.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(videopost.created_at) %> ago.
  </span>
  <% if current_user?(videopost.user) %>
      <%= link_to "delete", videopost, method: :delete,
                  data: { confirm: "You sure?" },
                  title: videopost.content, remote: true %>
  <% end %>
</li>