<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="span8">
    <% if @user.videoposts.any? %>
        <h3>Videos (<%= @user.videoposts.count %>)</h3>
        <ol class="videoposts">
          <%= render @videoposts %>
        </ol>
        <%= will_paginate @videoposts %>
    <% end %>
  </div>
</div>